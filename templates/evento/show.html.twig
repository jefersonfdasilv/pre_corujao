{% extends 'base.html.twig' %}

{% block title %}Evento{% endblock %}

{% block body %}
    <h1>Evento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ evento.nome }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ evento.descricao }}</td>
            </tr>
            <tr>
                <th>DataInicio</th>
                <td>{{ evento.dataInicio ? evento.dataInicio|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DataFim</th>
                <td>{{ evento.dataFim ? evento.dataFim|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cidade</th>
                <td>{{ evento.cidade }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evento_index') }}">back to list</a>

    <a href="{{ path('evento_edit', {'id': evento.id}) }}">edit</a>

    {{ include('evento/_delete_form.html.twig') }}
{% endblock %}
